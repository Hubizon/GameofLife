<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp">

        <LinearLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:textColor="@color/primaryTextColor"
                android:text="@string/computer"
                android:textSize="16sp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/ic_clock" />

            <TextView
                android:id="@+id/time_computer"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                tools:text="01.09 15:30"
                android:textColor="@color/primaryTextColor"/>
        </LinearLayout>



    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/playComputer"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@color/secondaryColor"
                android:textColor="@color/secondaryTextColor"
                android:text="@string/play_video_games" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?android:attr/buttonBarStyle">

                <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"
                    android:id="@+id/talkComputer"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@color/secondaryColor"
                    android:textColor="@color/secondaryTextColor"
                    android:text="@string/talk_on_messengers" />

                <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"
                    android:id="@+id/buyLotteries"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@color/secondaryColor"
                    android:textColor="@color/secondaryTextColor"
                    android:text="Buy Lotteries"
                     />
            </LinearLayout>

            <Button

                android:id="@+id/supportComputer"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@color/secondaryColor"
                android:textColor="@color/secondaryTextColor"
                android:text="@string/support_a_charity_event"
                 />
        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/makeGameComputer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/secondaryColor"
                android:textColor="@color/secondaryTextColor"
                android:text="@string/make_a_game"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?android:attr/buttonBarStyle">

                <Button
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"
                    android:id="@+id/drawSomethingComputer"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@color/secondaryColor"
                    android:textColor="@color/secondaryTextColor"
                    android:text="@string/draw_something"
                    style="?android:attr/buttonBarButtonStyle"/>

                <Button
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"
                    android:id="@+id/writePoemComputer"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@color/secondaryColor"
                    android:textColor="@color/secondaryTextColor"
                    android:text="@string/write_a_book"
                    style="?android:attr/buttonBarButtonStyle"/>
            </LinearLayout>


            <Button
                android:id="@+id/recordMoviesComputer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/secondaryColor"
                android:textColor="@color/secondaryTextColor"
                android:text="@string/record_movies"/>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>