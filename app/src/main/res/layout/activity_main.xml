    <android.support.design.widget.TabLayout
        style="@style/MyTabLayoutDark"
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        app:tabGravity="fill"
        app:tabMode="fixed" />

