<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hubert.gameoflife.MainActivity"
    android:background="@color/colorPrimary"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">


    <android.support.v7.widget.CardView
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <ImageView
            android:id="@+id/profile"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/profile_icon"
            android:onClick="onOtherClicks"/>

        <ImageView
            android:id="@+id/educationWork"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="85dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/education_icon"
            android:onClick="onOtherClicks" />

        <ImageView
            android:id="@+id/shop"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shop_icon"
            android:onClick="onOtherClicks" />

        <ImageView
            android:id="@+id/girlboyfriend"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="215dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/girlboyfriend_icon"
            android:onClick="onOtherClicks"/>

        <ImageView
            android:id="@+id/house"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="275dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/house_icon"
            android:onClick="onOtherClicks"/>

    </android.support.v7.widget.CardView>

    <FrameLayout
        android:id="@+id/mainFragmentHolder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_main"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />

</FrameLayout>
