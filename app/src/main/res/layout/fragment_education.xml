<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp">

        <TextView
            android:id="@+id/school_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/school"
            android:layout_marginTop="8dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="8dp"
            android:textSize="16sp"
            android:textColor="@color/textColorOnPrimary"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/clock_icon"
            android:layout_gravity="end"
            android:layout_marginEnd="100dp"
            android:layout_marginTop="3dp"/>

        <TextView
            android:id="@+id/time_school"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="3dp"
            tools:text="01.09 15:30"
            android:textColor="@color/textColorOnPrimary"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">


        <TextView
            android:id="@+id/timeToGoToSchool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/mon_fri"
            android:textColor="@color/textColorOnPrimary"
            android:textSize="16sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="35dp"
            android:background="@color/colorSecondary"
            android:text="@string/go_to_the_school"
            android:textColor="@color/textColorOnSecondary"
            android:textSize="15sp" />

        <ProgressBar
            android:id="@+id/progressBar_goToSchool"
            style="@style/ProgressBarMain"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="79dp"
            android:layout_marginBottom="8dp"
            tools:progress="0" />

        <Button
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:background="@color/colorSecondary"
            android:textColor="@color/textColorOnSecondary"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/learn_hard"/>

        <Button
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:background="@color/colorSecondary"
            android:textColor="@color/textColorOnSecondary"
            android:layout_marginTop="100dp"
            android:layout_marginStart="176dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/hang_around"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="145dp"
            android:background="@color/colorSecondary"
            android:text="@string/learn_at_home"
            android:textColor="@color/textColorOnSecondary"
            android:textSize="15sp"
            android:onClick="onLearnAtHomeClick"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="195dp"
            android:background="@color/colorSecondary"
            android:text="@string/give_up_school"
            android:textColor="@color/textColorOnSecondary"
            android:textSize="15sp"
            android:onClick="onGiveUpSchoolClick"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="61dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <TextView
            android:id="@+id/criminal_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/criminal"
            android:layout_marginTop="8dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="8dp"
            android:textSize="16sp"
            android:textColor="@color/textColorOnPrimary"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/money_icon"
            android:layout_gravity="end"
            android:layout_marginEnd="100dp"
            android:layout_marginTop="3dp"/>

        <TextView
            android:id="@+id/money_school"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="3dp"
            tools:text="$ "
            android:textColor="@color/textColorOnPrimary"/>

        <Button
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:background="@color/colorSecondary"
            android:textColor="@color/textColorOnSecondary"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/get_new_friends"/>

        <Button
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:background="@color/colorSecondary"
            android:textColor="@color/textColorOnSecondary"
            android:layout_marginTop="40dp"
            android:layout_marginStart="176dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/help_other_criminals"/>

        <Button
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:background="@color/colorSecondary"
            android:textColor="@color/textColorOnSecondary"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/steal_something"/>

        <Button
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:background="@color/colorSecondary"
            android:textColor="@color/textColorOnSecondary"
            android:layout_marginTop="90dp"
            android:layout_marginStart="176dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/sell_drugs"/>

        <Button
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:background="@color/colorSecondary"
            android:textColor="@color/textColorOnSecondary"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/give_a_bribe_for_better_grades"/>

        <Button
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:background="@color/colorSecondary"
            android:textColor="@color/textColorOnSecondary"
            android:layout_marginTop="140dp"
            android:layout_marginStart="176dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/threat_teachers"/>

    </android.support.v7.widget.CardView>

</LinearLayout>