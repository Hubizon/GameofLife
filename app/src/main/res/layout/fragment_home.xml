<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="8"
    app:alignmentMode="alignMargins"
    app:columnCount="2"
    app:columnOrderPreserved="false"
    android:padding="14dp"
    app:rowCount="3"
    tools:context=".house.HomeFragment">

    <!-- Row 1 -->
    <!-- Column 1 -->
    <android.support.v7.widget.CardView
        android:id="@+id/cardview_tv"
        style="@style/MyCardViewStyle">

        <FrameLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <ImageView
                style="@style/MyImageViewInCardViewStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/tv"
                app:srcCompat="@drawable/ic_television" />

            <TextView
                style="@style/MyTextViewInCardViewContrastStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="8dp"
                android:text="@string/tv" />

        </FrameLayout>

    </android.support.v7.widget.CardView>

    <!-- Column 2 -->
    <android.support.v7.widget.CardView
        android:id="@+id/cardview_bed"
        style="@style/MyCardViewStyle">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                style="@style/MyImageViewInCardViewStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/sleep"
                app:srcCompat="@drawable/ic_zzz" />

            <TextView
                style="@style/MyTextViewInCardViewContrastStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="8dp"
                android:text="@string/sleep" />
        </FrameLayout>
    </android.support.v7.widget.CardView>

    <!-- Row 2 -->

    <!-- Column 1 -->
    <android.support.v7.widget.CardView
        android:id="@+id/cardview_computer"
        style="@style/MyCardViewStyle">

        <FrameLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <ImageView
                android:id="@+id/computer_img"
                style="@style/MyImageViewInCardViewStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/computer"
                app:srcCompat="@drawable/computer_icon" />

            <TextView
                style="@style/MyTextViewInCardViewContrastStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="8dp"
                android:text="@string/computer"/>

        </FrameLayout>
    </android.support.v7.widget.CardView>

    <!-- Column 2 -->
    <android.support.v7.widget.CardView
        android:id="@+id/cardview_fitness"
        style="@style/MyCardViewStyle">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                style="@style/MyImageViewInCardViewStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/transportDesc"
                app:srcCompat="@drawable/ic_stationary_bike" />

            <TextView
                style="@style/MyTextViewInCardViewContrastStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="8dp"
                android:text="@string/fitness"/>

        </FrameLayout>
    </android.support.v7.widget.CardView>

    <!-- Row 2 -->

    <!-- Column 1 -->
    <android.support.v7.widget.CardView
        android:id="@+id/cardview_safe"
        style="@style/MyCardViewStyle">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/safe_img"
                style="@style/MyImageViewInCardViewStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/safe"
                app:srcCompat="@drawable/ic_strongbox" />

            <TextView
                style="@style/MyTextViewInCardViewContrastStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="8dp"
                android:text="@string/safe"/>

        </FrameLayout>
    </android.support.v7.widget.CardView>

    <!-- Column 2 -->
    <android.support.v7.widget.CardView
        android:id="@+id/cardview_ad"
        style="@style/MyCardViewStyle">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ad_img"
                style="@style/MyImageViewInCardViewStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/safe"
                app:srcCompat="@drawable/ic_video_camera" />

            <TextView
                style="@style/MyTextViewInCardViewContrastStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="8dp"
                android:text="@string/advertisement" />

        </FrameLayout>
    </android.support.v7.widget.CardView>

</android.support.v7.widget.GridLayout>